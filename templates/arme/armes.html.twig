{% extends 'base.html.twig' %}

{% block title %}Armes{% endblock %}

{% block monTitre %}
Liste des armes
{% endblock %}

{% block body %}

<table class="table">
    <tr class="thead-dark">
        <th>Image</th>
        <th>Nom</th>
        <th>Durabilit√©</th>
        <th>Puissance</th>
    </tr>
    

    {% for arme in armes %}
        <tr>
            <td><img src="{{asset('images/armes/' ~ arme.nom ~ '.png')}}"</td>
            <td><a href="{{ path('afficher_arme', {'nom' : arme.nom|lower}) }}">{{ arme.nom }}</a></td>
            <td>{{ arme.carac.durabilite }}</td>
            <td>{{ arme.carac.puissance }}</td>
        </tr>
    {% endfor %}
</table>
   
        
{% endblock %}
